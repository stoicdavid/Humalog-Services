<%- model_class = Brand.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>No. Categories</th>
	  <th>No. Menus</th>
	  <th># Studies</th>	  
	  <th># IPP's'</th>	  	  
	  <th># References</th>	  	  	  
	  <th>Interface updated?</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= link_to brand.id, brand_path(brand) %></td>
        <td><%= brand.name %></td>
        <td><%= brand.categories.count %></td>
		<td><%= brand.interface.number_of_menus %></td>
		<td><%= brand.pdfs.studies.count %></td>
		<td><%= brand.pdfs.ipps.count %></td>
		<td><%= brand.pdfs.references.count %></td>						
		<td><%= brand.interface.updated_device %></td>		
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_brand_path(brand), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      brand_path(brand),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_brand_path,
            :class => 'btn btn-primary' %>
